@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Client API Frontend</title>
    <!-- Include Bootstrap 5 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="/js/clientForm.js"></script>

</head>
<body>
    <div class="container text-center mt-5">
        <!-- Center the container -->
        <h1>Create a New Client</h1>
        <form id="clientForm">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="firstName" placeholder="First Name" required>
                <label for="firstName">First Name<span>*</span></label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="lastName" placeholder="Last Name" required>
                <label for="lastName">Last Name<span>*</span></label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="mobileNumber" placeholder="Mobile Number">
                <label for="mobileNumber">Mobile Number</label>
            </div>

            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="idNumber" placeholder="ID Number" required>
                <label for="idNumber">ID Number<span>*</span></label>
            </div>

            <div class="form-floating mb-3">
                <textarea class="form-control" id="physicalAddress" placeholder="Physical Address"></textarea>
                <label for="physicalAddress">Physical Address</label>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
            @*
            <div class="form-floating mb-3">
            <input type="text" class="form-control" id="searchIdNumber" placeholder="ID Number">
            <label for="searchIdNumber">Search ID Number</label>
            </div>
            <button type="button" id="searchButton" class="btn btn-primary">Search</button>
            *@
        </form>
 
        <div id="message"></div>
    </div>

    <!-- Include Bootstrap 5 JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
@page
@model ClientApp.Pages.ClientMaster.SearchModel

<form method="post">

    <div class="text-center">
        <h1 class="display-4">Client Search</h1>
        <div>
            <a href="https://localhost:7047/clientmaster">Back to List</a> 
            <hr/>
            <input type="text" asp-for="SearchTerm" placeholder="Enter search term" />
            <button type="submit">Search</button>
        </div>
    </div>
</form>

<!-- Display search results -->
<div class="text-center">
@if (Model.SearchResults != null && Model.SearchResults.Any())
{
    <h3>Search Results:</h3>
    <ul>
        @foreach (var result in Model.SearchResults)
        {
            <li>@result.FirstName - @result.IDNumber - @result.MobileNumber</li>
        }
    </ul>
}
else if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
{
    <p>No matching clients found.</p>
}
</div>
